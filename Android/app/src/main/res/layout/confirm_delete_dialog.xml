<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Are you sure?"
        android:textSize="22sp"
        android:fontFamily="@font/graphik_semibold"
        android:textColor="@color/colorFontDark"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:gravity="center">
        <Button
            android:id="@+id/confirm_delete_dialog_btn_delete"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="5dp"
            android:text="Delete"
            android:textSize="20sp"
            android:paddingBottom="2dp"
            android:layout_marginTop="2.1dp"
            android:fontFamily="@font/graphik_semibold"
            android:textColor="@color/colorFontWhite"
            android:background="@drawable/ripple_blue"
            android:textAllCaps="false"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/confirm_delete_dialog_btn_cancel"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="2.1dp"
            android:background="@drawable/cancel_border"
            android:text="Cancel"
            android:paddingBottom="5dp"
            android:textSize="20sp"
            android:fontFamily="@font/graphik_semibold"
            android:textColor="@color/colorFontDark"
            android:textAllCaps="false"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>