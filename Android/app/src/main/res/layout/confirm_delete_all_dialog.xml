<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="800dp"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Are you sure?"
        android:textSize="22sp"
        android:fontFamily="@font/graphik_semibold"
        android:textColor="@color/colorFontDark"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="This will delete all saved passwords.\nThis action cannot be undone."
        android:textSize="15sp"
        android:fontFamily="@font/graphik_semibold"
        android:textColor="@color/colorFontDark"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/confirm_delete_all_dialog_btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Delete"
            android:textSize="18sp"
            android:fontFamily="@font/graphik_semibold"
            android:textColor="@color/colorFontWhite"
            android:background="@drawable/delete_button"
            android:textAllCaps="false"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/confirm_delete_all_dialog_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/cancel_border"
            android:text="Cancel"
            android:textSize="18sp"
            android:fontFamily="@font/graphik_semibold"
            android:textColor="@color/colorFontDark"
            android:textAllCaps="false"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>