<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/deleteBackground"

    android:gravity="center">
    <EditText
        android:id="@+id/name_dialog_et_avatar_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter avatar name"
        android:padding="15dp"
        android:textSize="22sp"
        android:fontFamily="@font/graphik_regular"
        android:textColor="@color/colorFontDark"
        android:inputType="textMultiLine|textCapSentences"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:gravity="center">
        <Button
            android:id="@+id/name_dialog__btn_save"
            android:layout_width="100dp"
            android:layout_height="73dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="0dp"
            android:text="Save"
            android:textSize="20sp"
            android:paddingBottom="4dp"
            android:textColor="@color/colorFontWhite"
            android:background="@drawable/ripple_blue"
            android:textAllCaps="false"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/name_dialog__btn_cancel"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="2.1dp"
            android:background="@drawable/ripple_c"
            android:text="Cancel"
            android:paddingBottom="0dp"
            android:textSize="20sp"
            android:textColor="@color/colorButtonTextBoundary"
            android:textAllCaps="false"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>