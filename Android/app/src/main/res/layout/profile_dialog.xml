<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/dialog_profile_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Edit your avatar"
        android:textSize="23dp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_profile_pic"
        app:layout_constraintBottom_toTopOf="@+id/dialog_profile_ll_btn"/>
    <LinearLayout
        android:id="@+id/dialog_profile_ll_tap_to_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_profile_pic"
        app:layout_constraintBottom_toTopOf="@+id/dialog_profile_ll_btn">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/dialog_profile_vector_edit"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_edit_black_24dp"
             />
        <TextView
            android:id="@+id/dialog_profile_tv_tap_to_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="5dp"
            android:textSize="18dp"
            android:text="Tap to edit"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dialog_profile_ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:id="@+id/dialog_profile_btn_ok"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_done_24px" />
        <Button
            android:id="@+id/dialog_profile_btn_cancel"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_clear_24px"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>